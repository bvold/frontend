{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "node_modules/astro-pagefind/src/components"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": ["src/"],
  // "include": ["./**/*.ts", "./**/*.tsx", "./src/content/**/*.md","./src/content/**/*.mdx", "scripts/generateHeroImages.mts"],
  "exclude": ["node_modules"]
}